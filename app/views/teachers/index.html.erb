<h1>Listing teachers</h1>

<table>
  <tr>
    <th>Full name</th>
    <th>Preferred name</th>
    <th>Email</th>
    <th>Phone</th>
    <th>School</th>
    <th>Principal name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @teachers.each do |teacher| %>
  <tr>
    <td><%= teacher.full_name %></td>
    <td><%= teacher.preferred_name %></td>
    <td><%= teacher.email %></td>
    <td><%= teacher.phone %></td>
    <td><%= teacher.school_name %></td>
    <td><%= teacher.principal_name %></td>
    <td><%= link_to 'Show', teacher %></td>
    <td><%= link_to 'Edit', edit_teacher_path(teacher) %></td>
    <td><%= link_to 'Destroy', teacher, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

