   <form class="Message" action="/courses/:course_id/messages" method="post">
    <% if @message.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@message.errors.count, "error") %> prohibited this message from being saved:</h2>

        <ul>
          <% @message.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form_div">
      <h3> This Week's Parent Messages </h3>
      <% i=0 %>
      <% while i<=5 do %>
        Date: <input type="text" class="hidden" value= <%= @weekstart + i*(60*60*24)%>><br />
        Message: <textarea type="textarea" class="input"> </textarea><br />
        Course_id: <input type="text" class="hidden" value= <%= @course.id %>><br />
        <% i+=1 %>
      <% end %>
    </div>    

    <div class="actions">
      <input type="submit" value="Submit", class="submit" %>
    </div>

    </form>