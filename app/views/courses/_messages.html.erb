<form class="Messages" action="<%=url_for([@course,@message])%>" method="post">
  <div class="form_div">
    
    <h3> This Week's Parent Messages </h3>
    <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

    <% [:mon, :tue, :wed, :thu, :fri].each_with_index do |weekday, index| %>
      <% date_id     = "date#{index + 1}" %>
      <% body_id     = "body#{index + 1}" %>
      <% day_of_week = weekday_for_week(Time.zone.now, weekday) %>

      <div class="message_form">
        <span class="counter"></span>
        <% if @course.messages.find_by_send_date(day_of_week.to_date) %>
          <textarea id="<%= body_id %>" name="<%= body_id %>"><%=@course.messages.find_by_send_date(day_of_week.to_date).body%></textarea>
        <% else %>
          <textarea id="<%= body_id %>" name="<%= body_id %>"></textarea>
        <% end %>
        </br>    
        <input name="<%= date_id %>" type="hidden" value="<%= day_of_week %>">
        <label for="<%= body_id %>"><%= day_of_week.strftime("%A, %B %d, %Y") %></label>
      </div>
    <% end %>
  </div>    

  <div class="actions">
    <input type="submit" value="Submit", class="submit" %>
  </div>

</form>