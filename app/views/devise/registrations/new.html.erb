
<div class="formcard">
	<div class="headingwrap">
		<h2>Sign up</h2>
	</div>

	<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
	  <%= devise_error_messages! %>

	  <div>
	  <%= f.email_field :email, :autofocus => true, :placeholder => "email" %></div>

	  <div>
	  <%= f.password_field :password, :placeholder => "password" %></div>

	  <div>
	  <%= f.password_field :password_confirmation, :placeholder => "confirm password"%></div>

	  <div>
	  <%= f.text_field :full_name, :placeholder => "your full name"%></div>

	  <div>
	  <%= f.text_field :preferred_name, :placeholder => "students call me" %></div>

	  <div>
	  	<p>Please enter your 10-digit phone number without any dashes or other characters</p>
	  <%= f.text_field :phone, :placeholder => "phone number (5550001111)" %></div>

		<div>
	  <%= f.text_field :school, :placeholder => "school" %></div>

		<div>
	  <%= f.text_field :principal_name, :placeholder => "principal name" %></div>

	  <br />
	  <div><%= f.submit "Sign up" %></div>
	<% end %>

	<%= render "devise/shared/links" %>
</div>
