<!-- This layout is used for all of hte internal site pages such as forms and dashboards once a user has logged in. -->

<!DOCTYPE html>
<html lang="en">
<head>
  <title>BringUp</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  	<meta name="language" content="english"> 
	<meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1">
	<meta http-equiv="Content-Style-Type" content="text/css">
	<meta http-equiv="Content-Script-Type" content="text/javascript">
</head>
<body>
	<div id="header">
		<h1><%= link_to 'bringup', :root %></h1>
		<div class="navbar">
			<% if current_teacher.present? %>
				Welcome, <%=current_teacher.full_name%> |
				<%= link_to 'About', about_path %>  |  
				<%= link_to 'Contact', 'mailto:willmederski@gmail.com' %>  | 
		  		<%= link_to 'Sign Out', destroy_teacher_session_path, :method => :delete %>
			<% else %>
				<%= link_to 'About', about_path %>  |  
				<%= link_to 'Contact', '#' %>  | 
		  		<%= link_to 'Sign In', new_teacher_session_path %> |
		  		<%= link_to 'Register Now!', new_teacher_registration_path %>
			<% end %>
		</div>
	</div>

	<div class="card">
		<p class="notice"><%= notice %></p>
		<p class="alert"><%= alert %></p>

		<%= yield %>
	</div>
	<div class="footer">
		<div class="copyright">
			<p>Copyright 2013 bringup | All Rights Reserved | Web Development by Patricia Silva and Lydia Guarino</p>
		</div>
		<div class="footer_contact">
			<%=link_to image_tag('twitter.png', :class => 'icon'), 'http://www.twitter.com/bringuptogether'%>
			<%=link_to image_tag('facebook.png', :class =>'icon'), 'http://www.facebook.com/bringuptogether'%>
		</div>
	</div>

</body>
</html>
